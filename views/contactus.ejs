  <script>
    function sendEmail(event) {
      event.preventDefault(); // Prevent form submission
  
      // Get form input values
      var name = document.getElementById('nameInput').value;
      var email = document.getElementById('emailInput').value;
      var subject = document.getElementById('subjectInput').value;
      var message = document.getElementById('messageInput').value;
  
      // Prepare the email body
      var body = "Name: " + name + "\n";
      body += "Email: " + email + "\n";
      body += "Subject: " + subject + "\n";
      body += "Message: " + message;
  
      // Send the email using a mailto link
      var mailtoLink = "mailto:ersrivastavarishabh@gmail.com?subject=" + encodeURIComponent(subject) + "&body=" + encodeURIComponent(body);
      window.location.href = mailtoLink;
  
      // Show alert based on the success or failure of opening the email client
      setTimeout(function() {
        var isEmailClientOpened = document.hasFocus(); // Check if the email client is opened
        if (isEmailClientOpened) {
          alert("Email sent successfully!");
        } else {
          alert("Failed to send email. Please check if you have an email client configured.");
        }
      }, 500);
    }
  </script>
  
